@page
@{
    ViewData["Title"] = "Dashboard - Upload Document";
}

<h2>Upload a Document</h2>

<!-- File upload section -->
<div class="file-upload-container">
    <input type="file" id="fileInput" name="UploadedFile" required class="file-input" />
    @* <span id="fileName" class="file-name">No file chosen</span> <!-- Display selected file name --> *@
</div>

<!-- Upload Button -->
<div>
    <button type="button" id="uploadButton" class="upload-button">Upload</button>
</div>

<!-- Dashboard.cshtml -->
<div>
    <button id="testButton" type="button" onclick="runCitationTest()">Run Citation Conversion Test</button>
    <div id="testResult"></div>

    <script>
        function runCitationTest() {
            fetch('/dashboard/runtest')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('testResult').innerText = data.message;
                })
                .catch(error => {
                    document.getElementById('testResult').innerText = 'Error: ' + error;
                });
        }
    </script>
</div>

<!-- Conversion Status Tracker -->
<div id="statusTracker" class="status-tracker">
    <p id="statusMessage">Status: Waiting for file...</p>
    <div id="statusBar" class="status-bar">
        <div id="statusProgress" class="status-progress"></div>
    </div>
</div>

<!-- Modal for Error Message -->
<div id="errorModal" class="modal error-modal">
    <h4>Error</h4>
    <p id="errorMessage" class="error-message"></p>
    <button onclick="closeModal()" class="modal-button close-error-modal">Close</button>
</div>

<!-- Modal for Success Message -->
<div id="successModal" class="modal success-modal">
    <h4>Success</h4>
    <p id="successMessage" class="success-message"></p>
    <button onclick="closeSuccessModal()" class="modal-button close-success-modal">Close</button>
</div>

<script>
    document.getElementById("uploadButton").addEventListener("click", function (event) {
        event.preventDefault(); // Prevent default form submission

        let formData = new FormData();
        let fileInput = document.getElementById("fileInput").files[0];

        // Check if no file is selected
        if (!fileInput) {
            alert("Please select a file to upload.");
            return;
        }

        // Check if the file is a .docx
        let fileExtension = fileInput.name.split('.').pop().toLowerCase();
        if (fileExtension !== "docx") {
            alert("Only .docx files are allowed. Please upload a valid .docx file.");
            document.getElementById("fileInput").value = ""; // Clear the file input
            return;
        }

        formData.append("UploadedFile", fileInput); // Ensure this matches the parameter name in the controller

        fetch("/dashboard/upload", { // POST to /dashboard/upload endpoint
            method: "POST",
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById("statusMessage").innerText = "Status: Converting...";

                // Simulate conversion progress update
                let progress = 0;
                let progressInterval = setInterval(function () {
                    progress += 10;
                    document.getElementById("statusProgress").style.width = progress + "%";
                    if (progress === 100) {
                        clearInterval(progressInterval);
                        document.getElementById("statusMessage").innerText = "Status: Conversion completed!";
                    }
                }, 1000);
            } else {
                alert("Error: " + data.message);
            }
        })
        .catch(error => {
            alert("Upload failed. " + error.message);
            console.error("Upload error:", error);
        });

        // Clear the file input after the form submission
        document.getElementById("fileInput").value = "";
    });
</script>

<!-- Styles for the page -->
<style>
    /* File upload section styles */
    .file-upload-container {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

    .file-input {
        padding: 10px;
        margin-right: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 16px;
        width: 300px;
    }

    .file-name {
        font-size: 16px;
        color: #555;
    }

    /* Upload button styles */
    .upload-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    /* Conversion Status Tracker */
    .status-tracker {
        margin-top: 20px;
    }

    .status-bar {
        width: 100%;
        height: 20px;
        background-color: #f3f3f3;
    }

    .status-progress {
        width: 0%;
        height: 100%;
        background-color: green;
    }

    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        padding: 20px;
        border-radius: 5px;
        z-index: 9999;
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

    .error-modal {
        background: rgba(0, 0, 0, 0.7);
    }

    .success-modal {
        background: rgba(0, 128, 0, 0.7);
    }

    /* Modal button styles */
    .modal-button {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
    }

    .close-error-modal {
        background-color: #dc3545;
        color: white;
    }

    .close-success-modal {
        background-color: #28a745;
        color: white;
    }

    /* Status message styles */
    #statusMessage {
        margin-top: 20px;
        color: #333;
    }
</style>
