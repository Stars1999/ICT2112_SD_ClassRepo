@page
@model ICT2106WebApp.Pages.QualityCheckerModel
@{
    ViewData["Title"] = "PDF Quality Checker";
    // Get the report details through public methods
    var reportDetails = Model.Report.GetQualityReportDetails();
    var isSuccessful = reportDetails.Item1;
    var issues = reportDetails.Item2;
    var metrics = reportDetails.Item3;
    var qualityScore = reportDetails.Item4;
}

<h2>PDF Quality Checker</h2>

<!-- Upload Form -->
<form method="post" enctype="multipart/form-data" class="upload-form">
    <div class="filter-container">
        <label for="pdfFile">Upload PDF:</label>
        <input type="file" id="pdfFile" name="PdfFile" class="form-control" accept=".pdf" />
        <button type="submit" class="btn-primary">Check Quality</button>
    </div>
</form>

<!-- Validation Message -->
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model.ShowEmptyState)
{
    <div class="empty-state">
        <p>Please upload a PDF file to check its quality.</p>
        <p>The quality checker will analyze:</p>
        <ul>
            <li>Text formatting and font consistency</li>
            <li>Image resolution quality</li>
            <li>Document structure and organization</li>
            <li>Math notation formatting</li>
            <li>Bibliography and reference formatting</li>
        </ul>
    </div>
}
else if (Model.Report != null)
{
    <div class="report-container">
        <h3>Quality Report</h3>
        <div class="status-badge @(isSuccessful ? "success" : "error")">
            Status: @(isSuccessful ? "Passed" : "Issues Found")
        </div>

        <!-- Quality Score -->
        <p><strong>Quality Score:</strong> @qualityScore%</p>

        <!-- Issues List -->
        <h4>Issues Found</h4>
        <div class="issues-container">
            @if (issues.Any())
            {
                <ul class="issues-list">
                    @foreach (var issue in issues)
                    {
                        <li class="issue-item">@issue</li>
                    }
                </ul>
            }
            else
            {
                <p class="success-message">No issues found! The PDF meets all quality standards.</p>
            }
        </div>
    </div>
}

<p>
    Select a PDF file above and click the button to check its quality. The page will display a detailed report including an overall quality score.
</p>

<!-- Styles for Better UI -->
<style>
    .upload-form {
        margin-bottom: 20px;
    }

    .filter-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 15px;
        align-items: center;
    }

    .form-control {
        padding: 6px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .report-container {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 15px;
        margin-top: 20px;
        border: 1px solid #e9ecef;
    }

    .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 3px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .success {
        background-color: #d4edda;
        color: #155724;
    }

    .error {
        background-color: #f8d7da;
        color: #721c24;
    }

    .issues-list {
        margin-top: 10px;
        padding-left: 20px;
    }

    .issue-item {
        margin-bottom: 5px;
        color: #721c24;
    }

    .success-message {
        color: #155724;
        font-weight: bold;
    }

    .empty-state {
        background-color: #e9ecef;
        padding: 20px;
        border-radius: 5px;
        margin-top: 20px;
    }

    .empty-state ul {
        margin-top: 10px;
        padding-left: 20px;
    }

    .empty-state li {
        margin-bottom: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary:hover {
        background-color: #0069d9;
    }
</style>