        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 15px;
        align-items: center;
    }

    .form-control {
        padding: 6px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .report-container {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 15px;
        margin-top: 20px;
        border: 1px solid #e9ecef;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 4px;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .success {
        background-color: #28a745;
        color: white;
    }

    .error {
        background-color: #dc3545;
        color: white;
    }

    .table-container {
        overflow-x: auto;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #4A4A4A;
        color: white;
        padding: 12px;
        text-align: left;
    }

    td {
        padding: 10px;
        border: 1px solid #ddd;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .issues-container {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 10px;
    }

    .issues-list {
        padding-left: 20px;
    }

    .issue-item {
        margin-bottom: 8px;
        color: #dc3545;
    }

    .success-message {
        color: #28a745;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
