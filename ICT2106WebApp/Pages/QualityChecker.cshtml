@page
@model ICT2106WebApp.Pages.QualityCheckerModel
@{
    ViewData["Title"] = "PDF Quality Checker";
}

<h2>PDF Quality Checker</h2>

<!-- Upload Form -->
<form method="post" enctype="multipart/form-data" class="upload-form">
    <div class="filter-container">
        <label for="pdfFile">Upload PDF:</label>
        <input type="file" id="pdfFile" name="PdfFile" class="form-control" accept=".pdf" />
        <button type="submit" class="btn-primary">Check Quality</button>
    </div>
</form>

<!-- Validation Message -->
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (Model.Report != null)
{
    <div class="report-container">
        <h3>Quality Report</h3>
        <div class="status-badge @(Model.Report.IsSuccessful ? "success" : "error")">
            Status: @(Model.Report.IsSuccessful ? "Passed" : "Issues Found")
        </div>

        <!-- Quality Score -->
        <p><strong>Quality Score:</strong> @Model.Report.QualityScore%</p>

        <!-- Quality Metrics Table -->
        <h4>Quality Metrics</h4>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Metric</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Report.Metrics.Any())
                    {
                        @foreach (var metric in Model.Report.Metrics)
                        {
                            <tr>
                                <td>@metric.Key</td>
                                <td>@metric.Value</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2">No metrics available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Issues List -->
        <h4>Issues Found</h4>
        <div class="issues-container">
            @if (Model.Report.Issues.Any())
            {
                <ul class="issues-list">
                    @foreach (var issue in Model.Report.Issues)
                    {
                        <li class="issue-item">@issue</li>
                    }
                </ul>
            }
            else
            {
                <p class="success-message">No issues found! The PDF meets all quality standards.</p>
            }
        </div>
    </div>
}

<p>
    Select a PDF file above and click the button to check its quality. The page will display a detailed report including an overall quality score.
</p>

<!-- Styles for Better UI -->
