@page
@model ICT2106WebApp.Pages.TemplateTestModel
@{
    ViewData["Title"] = "Template Test";
}

<div class="container">
    <h1>Document Template Test</h1>
    
    <div class="row mb-4">
        <div class="col">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <h5>Load Document & Apply Template</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label for="templateSelect">Select Template:</label>
                            <select asp-for="SelectedTemplateId" asp-items="Model.AvailableTemplates" class="form-control" id="templateSelect">
                                <!-- Templates loaded from MongoDB -->
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Load Document & Apply Template</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    @if (Model.IsDocumentLoaded)
    {
        <div class="row mb-4">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h5>Document Content Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>Format Elements:</strong> @Model.FormatContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>Text Elements:</strong> @Model.TextContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>Paragraph Elements:</strong> @Model.ParagraphContent.Count
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <strong>Layout Elements:</strong> @Model.LayoutContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>Math Elements:</strong> @Model.MathContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>List Elements:</strong> @Model.ListContent.Count
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <strong>Image Elements:</strong> @Model.ImageContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>Bibliography Elements:</strong> @Model.BibliographyContent.Count
                            </div>
                            <div class="col-md-4">
                                <strong>Metadata Elements:</strong> @Model.MetadataContent.Count
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <!-- Original LaTeX Format Column -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>Original LaTeX Format</h5>
                        <span class="badge @(Model.OriginalLaTeXResult ? "bg-success" : "bg-danger")">
                              @(Model.OriginalLaTeXResult ? "Conversion Success" : "Conversion Failed") 
                        </span>
                    </div>
                    <div class="card-body">
                        <pre style="max-height: 500px; overflow-y: auto;"><code>@Model.OriginalLaTeXContent</code></pre>
                    </div>
                </div>
            </div>
            
            <!-- Template-Applied LaTeX Format Column -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5>@Model.SelectedTemplateId?.ToUpperInvariant() Template Format</h5>
                        <span class="badge @(Model.TemplateResult ? "bg-success" : "")">
                            @* @(Model.TemplateResult ? "Template Applied" : "Template Failed") *@ 
                            @* Don't need conversion success result for applied templates since its not class implementation *@
                        </span>
                    </div>
                    <div class="card-body">
                        <pre style="max-height: 500px; overflow-y: auto;"><code>@Model.TemplateAppliedContent</code></pre>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable syntax highlighting if you have a library like highlight.js
            // hljs.highlightAll();
        });
    </script>
}