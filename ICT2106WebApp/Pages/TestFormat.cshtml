@page
@model ICT2106WebApp.Pages.TestFormatModel
@{
    ViewData["Title"] = "Test Document Formatting";
}

<h2>Test Document Formatting</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Format Manager</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="TestFormat">
                    <button type="submit" class="btn btn-primary">Test Format Manager</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Layout Manager</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="TestLayout">
                    <button type="submit" class="btn btn-primary">Test Layout Manager</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Result != null)
{
    <div class="mt-4">
        <h3>Test Result (@Model.TestType): @(Model.Result.Value ? "Success" : "Failure")</h3>
        <ul class="list-group">
            @foreach (var node in Model.Content)
            {
                <li class="list-group-item">
                    @node.GetContent()
                </li>
            }
        </ul>
    </div>
}