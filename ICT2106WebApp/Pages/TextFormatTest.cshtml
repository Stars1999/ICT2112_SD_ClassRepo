@page
@model ICT2106WebApp.Pages.TextFormatTestModel
@{
    ViewData["Title"] = "Test Text Formatting";
}

<div class="container">
    <h2 class="mb-4">Test Text Formatting Conversion</h2>
    
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    Input Text & Formatting
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="content">Text Content:</label>
                            <textarea id="content" name="content" class="form-control" rows="3" required>@Model.Content</textarea>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="font">Font:</label>
                            <select id="font" name="font" class="form-control">
                                <option value="Times New Roman" selected="@(Model.Font == "Times New Roman")">Times New Roman</option>
                                <option value="Arial" selected="@(Model.Font == "Arial")">Arial</option>
                                 <option value="Calibri" selected="@(Model.Font == "Calibri")">Calibri</option>
                            </select>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label>Text Style:</label>
                            <div class="form-check">
                                <input asp-for="BoldStyle" class="form-check-input" type="checkbox">
                                <label asp-for="BoldStyle" class="form-check-label">Bold</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="ItalicStyle" class="form-check-input" type="checkbox">
                                <label asp-for="ItalicStyle" class="form-check-label">Italic</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="UnderlineStyle" class="form-check-input" type="checkbox">
                                <label asp-for="UnderlineStyle" class="form-check-label">Underline</label>
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="color">Text Color:</label>
                            <select id="color" name="color" class="form-control">
                                <option value="#000000" selected="@(Model.Color == "#000000")">Black</option>
                                <option value="#FF0000" selected="@(Model.Color == "#FF0000")">Red</option>
                                <option value="#0000FF" selected="@(Model.Color == "#0000FF")">Blue</option>
                                <option value="#008000" selected="@(Model.Color == "#008000")">Green</option>
                            </select>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="LineSpacing">Line Spacing:</label>
                            <select id="LineSpacing" name="LineSpacing" class="form-control">
                                <option value="1.0" selected="@(Model.LineSpacing == 1.0f)">Single (1.0)</option>
                                <option value="1.5" selected="@(Model.LineSpacing == 1.5f)">1.5 Lines</option>
                                <option value="2.0" selected="@(Model.LineSpacing == 2.0f)">Double (2.0)</option>
                            </select>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="alignment">Text Alignment:</label>
                            <select id="alignment" name="alignment" class="form-control">
                                <option value="left" selected="@(Model.Alignment == "left")">Left</option>
                                <option value="center" selected="@(Model.Alignment == "center")">Center</option>
                                <option value="right" selected="@(Model.Alignment == "right")">Right</option>
                                <option value="justify" selected="@(Model.Alignment == "justify")">Justify</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Convert to LaTeX</button>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    Converted LaTeX Output
                </div>
                <div class="card-body">
                    @if (Model.ConversionSuccess)
                    {
                        <div class="alert alert-success">Conversion completed successfully!</div>
                    }
                    
                    <h5>LaTeX Code:</h5>
                    <div class="bg-light p-3 mb-3" style="font-family: monospace; white-space: pre-wrap;">
                        @foreach (var node in Model.ConvertedNodes)
                        {
                            @node.GetContent()<br/>
                        }
                    </div>
                    
                    <h5>Preview (Simplified):</h5>
                    <div class="border p-3">
                        <div style="
                            @(Model.Font == "Times New Roman" ? "font-family: 'Times New Roman', Times, serif;" : 
                             Model.Font == "Arial" ? "font-family: Arial, sans-serif;" :
                             Model.Font == "Calibri" ? "font-family: 'Calibri', monospace;" : "")
                            @(Model.BoldStyle ? "font-weight: bold;" : "")
                            @(Model.ItalicStyle ? "font-style: italic;" : "")
                            @(Model.UnderlineStyle ? "text-decoration: underline;" : "")
                            color: @Model.Color;
                            line-height: @Model.LineSpacing;
                            text-align: @Model.Alignment;">
                            @Model.Content
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>